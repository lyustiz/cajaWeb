@model Caja.MVC.Core.Models.CiudadModel

@{
    ViewData["Title"] = "Editar Ciudad";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Administración</a></li>
    <li class="breadcrumb-item"><a href="#">General</a></li>
    <li class="breadcrumb-item"><a href="#">Paises</a></li>
    <li class="breadcrumb-item active">Ciudades</li>
</ul>

<hr class="mb-4">

<form asp-action="Edit">

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            <strong>Correcto!</strong> @ViewBag.SuccessMessage
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.ErrorMessage
        </div>
    }
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Administración Ciudades</h5>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCiudad" class="control-label"></label>
                <input asp-for="IdCiudad" class="form-control" readonly/>
                <span asp-validation-for="IdCiudad" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input asp-for="IdPais" class="form-control" type="hidden" />                
            </div>
            <div class="form-group">
                <label asp-for="NombrePais" class="control-label"></label>
                <input asp-for="NombrePais" class="form-control" />
                <span asp-validation-for="NombrePais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <div>
                <button type="submit" class="btn btn-primary card-link">Guardar Cambios</button>
                <a href="@Url.Action("Index", "Ciudades")" class="btn btn-secondary card-link">
                    <i class="fa fa-backward"></i>
                    Volver
                </a>
            </div>
        </div>
    </div>
</form>

